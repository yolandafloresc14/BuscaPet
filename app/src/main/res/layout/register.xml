<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5E4D2"
    android:gravity="center_horizontal">

        <!-- Logo or Icon -->
        <ImageView
            android:id="@+id/logoIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/logoicon"
            android:contentDescription="App Logo"
            android:marginBottom="16dp"/>

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create your account"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#8B5A2B"
            android:marginBottom="20dp"/>

        <!-- Username Field -->
        <EditText
            android:id="@+id/usernameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="8dp"
            android:background="@drawable/edit_text_background"
            android:padding="0dp"
            android:textColorHint="#A1887F"
            android:marginBottom="8dp"
            />

        <!-- Email Field -->
        <EditText
            android:id="@+id/emailField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="8dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:marginBottom="12dp"
            android:padding="12dp"
            android:textColorHint="#A1887F" />

        <!-- Password Field -->
        <EditText
            android:id="@+id/passwordField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="8dp"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:textColorHint="#A1887F"
            android:marginBottom="12dp"/>

        <!-- Confirm Password Field -->
        <EditText
            android:id="@+id/confirmPasswordField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="8dp"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:textColorHint="#A1887F"
            android:marginBottom="12dp"/>

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/privacyPolicyCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I accept Privacy Policy y Terms of Use"
            android:textColor="#8B5A2B"
            android:marginBottom="24dp"/>

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:backgroundTint="#8B5A2B"
            android:textColor="#FFFFFF"
            android:marginBottom="16dp"/>

        <!-- Sign Up Options -->
        <TextView
            android:id="@+id/orText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OR"
            android:gravity="center"
            android:textColor="#8B5A2B"
            android:marginBottom="16dp"/>

        <!-- Sign Up with Google -->
        <Button
            android:id="@+id/googleSignUpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up with Google"
            android:background="@drawable/btn_google_background"
            android:drawableStart="@drawable/ic_google"
            android:drawablePadding="8dp"
            android:marginBottom="12dp"/>

        <!-- Log In -->
        <TextView
            android:id="@+id/loginText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account? Log In"
            android:gravity="center"
            android:textColor="#8B5A2B"
            android:textStyle="bold"
            android:padding="16dp"/>

</LinearLayout>