<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5E4D2"
    android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/logoicon"
            android:contentDescription="App Logo"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crea tu cuenta"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#8B5A2B"
            android:layout_marginBottom="24dp" />

        <!-- Username Field -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_user"
                    android:contentDescription="User Icon"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/usernameField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="tu usuario"
                    android:background="@null"
                    android:textColorHint="#A1887F"
                    android:textSize="14sp" />
        </LinearLayout>

        <!-- Email Field -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_email"
                    android:contentDescription="Email Icon"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/emailField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="tu nombre@gmail.com"
                    android:background="@null"
                    android:textColorHint="#A1887F"
                    android:textSize="14sp"
                    android:inputType="textEmailAddress" />
        </LinearLayout>

        <!-- Password Field -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_password"
                    android:contentDescription="Password Icon"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/passwordField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="tu contraseña"
                    android:background="@null"
                    android:textColorHint="#A1887F"
                    android:textSize="14sp"/>

        </LinearLayout>

        <!-- Confirm Password Field -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_password"
                    android:contentDescription="Confirm Password Icon"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/confirmPasswordField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="confirma tu contraseña"
                    android:background="@null"
                    android:textColorHint="#A1887F"
                    android:textSize="14sp" />
        </LinearLayout>

        <!-- Privacy Policy -->
        <CheckBox
            android:id="@+id/privacyPolicyCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acepto los términos y condiciones de privacidad"
            android:textColor="#8B5A2B"
            android:layout_marginBottom="24dp" />

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regístrate"
            android:backgroundTint="#8B5A2B"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Divider -->
        <TextView
            android:id="@+id/orText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OR"
            android:gravity="center"
            android:textColor="#8B5A2B"
            android:layout_marginBottom="16dp" />

        <!-- Sign Up with Google -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_google_background"
            android:padding="12dp"> <!-- Centrar en el contenedor -->

                <TextView
                    android:id="@+id/googleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/googleIcon"
                    android:text="Regístrate con Google"
                    android:textColor="#8B5A2B"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/googleIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="77dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_google" />

        </RelativeLayout>

        <!-- Log In -->
        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Ya tienes una cuenta? Iniciar sesión"
            android:gravity="center"
            android:textColor="#8B5A2B"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />
</LinearLayout>
